{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}